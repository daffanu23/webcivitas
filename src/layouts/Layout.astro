---
import { ClientRouter } from 'astro:transitions';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const { title = "MEDIACIVITAS" } = Astro.props;
---

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <ClientRouter />
</head>
<body>
    
    <Navbar />

    <div class="page-wrapper">
        <slot />
    </div>

    <Footer />

</body>
</html>

<style is:global>
    /* RESET & FONT DASAR */
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #ffffff;
        color: #111111;
        overflow-x: hidden; /* Mencegah scrollbar horizontal saat animasi */
        margin: 0;
    }

    /* --- ANIMASI SLIDING SEPERTI HP --- */
    
    /* Halaman LAMA (Keluar ke Kiri) */
    ::view-transition-old(root) {
        animation: slideOut 0.3s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    /* Halaman BARU (Masuk dari Kanan) */
    ::view-transition-new(root) {
        animation: slideIn 0.3s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    @keyframes slideOut {
        from { transform: translateX(0); opacity: 1; }
        to { transform: translateX(-20%); opacity: 0; } /* Geser dikit aja biar elegan */
    }

    @keyframes slideIn {
        from { transform: translateX(100%); opacity: 0; } /* Masuk dari ujung kanan layar */
        to { transform: translateX(0); opacity: 1; }
    }
</style>