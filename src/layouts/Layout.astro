---
import { ClientRouter } from 'astro:transitions';
import Navbar from '../components/Navbar.astro';
import FloatingBar from '../components/FloatingBar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const { title = "MEDIACIVITAS" } = Astro.props;
---

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <ClientRouter />
</head>
<body>
    
    <Navbar />

    <main class="main-content" transition:animate="none">
        <div class="animate-wrapper container">
            <slot />
        </div>
    </main>

    <Footer />

    <FloatingBar />

</body>
</html>

<style is:global>
    /* RESET & DASAR */
    * { box-sizing: border-box; margin: 0; padding: 0; }
    
    body {
        font-family: 'Poppins', sans-serif;
        
        /* PENTING: Jangan tulis background-color atau color disini! */
        /* Biarkan global.css yang mengaturnya lewat var(--bg) */
        
        overflow-x: hidden;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        
        /* Transisi agar ganti tema halus */
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    /* CONTAINER GLOBAL */
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
        width: 100%;
    }

    /* ANIMASI KONTEN (Slide Up) */
    .animate-wrapper {
        animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        opacity: 0;
    }

    @keyframes slideUp {
        0% { opacity: 0; transform: translateY(40px); }
        100% { opacity: 1; transform: translateY(0); }
    }

    /* Link Style Global */
    a { text-decoration: none; color: inherit; }
</style>