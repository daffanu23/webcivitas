---
import { Home, Archive } from 'lucide-react';
---

<nav class="floating-navbar" transition:persist>
    <div class="dock-container">
        
        <a href="/" class="dock-item" aria-label="Beranda">
            <Home size={22} />
        </a>
        
        <div class="dock-divider"></div>

        <a href="/arsip" class="dock-item" aria-label="Arsip Berita">
            <Archive size={22} />
        </a>

        <div id="dock-dynamic" style="display: flex; align-items: center; gap: 20px;"></div>

    </div>
</nav>

<style>
    .floating-navbar {
        position: fixed;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 9999;
        font-family: 'Poppins', sans-serif;
    }

    .dock-container {
        display: flex;
        align-items: center;
        gap: 20px;
        /* Style Brutalist Clean: Putih Solid, Border Hitam Tipis */
        background: #ffffff; 
        padding: 12px 30px;
        border: 2px solid #111;
        /* Pill Shape */
        border-radius: 50px; 
        box-shadow: 4px 4px 0px rgba(0,0,0,0.2);
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .dock-container:hover {
        transform: translateY(-4px);
        box-shadow: 6px 6px 0px #000;
    }

    .dock-item {
        color: #111;
        opacity: 0.5;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

    .dock-item:hover {
        opacity: 1;
        transform: scale(1.2);
        color: #000;
    }

    .dock-divider {
        width: 2px;
        height: 18px;
        background: #eee;
    }
</style>

<script>
    import { supabase } from '../lib/supabase';

    // Fungsi untuk render ikon menu tambahan berdasarkan Role
    async function updateDock() {
        const dynamicContainer = document.getElementById('dock-dynamic');
        if (!dynamicContainer) return;

        // Reset dulu biar gak double
        dynamicContainer.innerHTML = '';

        const { data: { session } } = await supabase.auth.getSession();

        if (session) {
            // Cek Role User
            const { data: profile } = await supabase
                .from('profiles')
                .select('role')
                .eq('id', session.user.id)
                .single();
            
            let htmlContent = `<div class="dock-divider"></div>`;

            // A. ROLE REDAKSI & ADMIN (Bisa Tulis Berita)
            if (profile?.role === 'redaksi' || profile?.role === 'admin') {
                htmlContent += `
                    <a href="/redaksi/tulis" class="dock-item" aria-label="Tulis Berita">
                        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/><path d="m15 5 4 4"/></svg>
                    </a>
                `;
            }

            // B. ROLE ADMIN (Bisa Akses Dashboard)
            if (profile?.role === 'admin') {
                htmlContent += `
                    <a href="/admin/dashboard" class="dock-item" aria-label="Dashboard Admin">
                        <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="7" height="9" x="3" y="3" rx="1"/><rect width="7" height="5" x="14" y="3" rx="1"/><rect width="7" height="9" x="14" y="12" rx="1"/><rect width="7" height="5" x="3" y="16" rx="1"/></svg>
                    </a>
                `;
            }

            // C. USER PROFILE (Semua yang login punya ini)
            htmlContent += `
                <a href="/profile" class="dock-item" aria-label="Profil User">
                    <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
                </a>
            `;

            dynamicContainer.innerHTML = htmlContent;
        }
    }

    // Jalankan setiap kali halaman dimuat (untuk support View Transitions)
    document.addEventListener('astro:page-load', updateDock);
</script>