---
import { Instagram } from 'lucide-react';
---

<footer class="simple-footer">
    <div class="container footer-content">
        
        <span class="copyright">
            &copy; 2026 mediacivitas. All rights reserved.
        </span>

        <a href="https://instagram.com/mediacivitas" target="_blank" class="social-link">
            <Instagram size={18} />
            <span>@mediacivitas</span>
        </a>

    </div>
</footer>

<style>
    .simple-footer {
        width: 100%;
        padding: 30px 0;
        margin-top: auto; /* Dorong ke paling bawah */
        
        /* GANTI: Gunakan Variabel agar adaptif */
        background-color: var(--bg-light); 
        border-top: 1px solid var(--border-muted);
        color: var(--text);
        
        font-family: 'Poppins', sans-serif;
        font-size: 0.85rem;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .copyright {
        font-weight: 500;
        /* GANTI: Warna text muted */
        color: var(--text-muted);
    }

    .social-link {
        display: flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        
        /* GANTI: Warna text utama */
        color: var(--text);
        
        font-weight: 600;
        transition: opacity 0.2s;
    }

    .social-link:hover {
        opacity: 0.7;
        /* Opsional: Ubah warna saat hover */
        color: var(--highlight); 
    }

    /* RESPONSIVE MOBILE */
    @media (max-width: 600px) {
        .footer-content {
            flex-direction: column;
            gap: 15px;
            text-align: center;
        }
    }
</style>