---
import { Instagram } from 'lucide-react';
---

<footer class="simple-footer">
    <div class="container footer-content">
        
        <span class="copyright">
            &copy; 2026 mediacivitas. All rights reserved.
        </span>

        <a href="https://instagram.com/mediacivitas" target="_blank" class="social-link">
            <Instagram size={18} />
            <span>@mediacivitas</span>
        </a>

    </div>
</footer>

<style>
    .simple-footer {
        width: 100%;
        padding: 30px 0;
        margin-top: auto; /* Dorong ke paling bawah jika konten sedikit */
        
        /* STYLE SESUAI GAMBAR */
        background-color: #F9FAFB; /* Abu-abu sangat muda */
        border-top: 1px solid #111; /* Garis pemisah tegas */
        
        font-family: 'Poppins', sans-serif;
        font-size: 0.85rem;
        color: #111;
    }

    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .copyright {
        font-weight: 500;
        color: #444;
    }

    .social-link {
        display: flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        color: #111;
        font-weight: 600;
        transition: opacity 0.2s;
    }

    .social-link:hover {
        opacity: 0.7;
    }

    /* RESPONSIVE MOBILE */
    @media (max-width: 600px) {
        .footer-content {
            flex-direction: column;
            gap: 15px;
            text-align: center;
        }
    }
</style>