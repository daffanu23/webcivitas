---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { ShieldCheck } from 'lucide-react';
import '../styles/global.css';
---

<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Redaksi - MEDIACIVITAS</title>
</head>
<body class="login-body">
    
    <Navbar />

    <main class="login-container">
        <div class="login-card">
            <div class="icon-header">
                <ShieldCheck size={48} stroke-width={1.5} />
            </div>
            
            <h1 class="login-title">Akses Redaksi</h1>
            <p class="login-desc">Silakan masuk untuk menulis berita atau mengelola konten.</p>

            <button id="google-login" class="btn-google">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M23.52 12.29C23.52 11.43 23.44 10.6 23.3 9.8H12V14.5H18.47C18.18 15.99 17.34 17.25 16.08 18.1V21.09H19.93C22.19 19 23.52 15.92 23.52 12.29Z" fill="#4285F4"/>
                    <path d="M12 24C15.24 24 17.96 22.92 19.93 21.09L16.08 18.1C15 18.82 13.62 19.24 12 19.24C8.87 19.24 6.22 17.12 5.27 14.29H1.29V17.38C3.21 21.19 7.27 24 12 24Z" fill="#34A853"/>
                    <path d="M5.27 14.29C5.03 13.57 4.9 12.8 4.9 12C4.9 11.2 5.03 10.43 5.27 9.71V6.62H1.29C0.47 8.24 0 10.06 0 12C0 13.94 0.47 15.76 1.29 17.38L5.27 14.29Z" fill="#FBBC05"/>
                    <path d="M12 4.75C13.77 4.75 15.35 5.36 16.6 6.55L20.02 3.13C17.95 1.21 15.24 0 12 0C7.27 0 3.21 2.81 1.29 6.62L5.27 9.71C6.22 6.88 8.87 4.75 12 4.75Z" fill="#EA4335"/>
                </svg>
                Lanjutkan dengan Google
            </button>
        </div>
    </main>

    <Footer />

    <script>
        import { supabase } from '../lib/supabase';
        
        const btn = document.getElementById('google-login');
        
        // Pengecekan null agar TypeScript tidak error
        if (btn) {
            btn.addEventListener('click', async () => {
                try {
                    // Ubah text tombol biar user tau lagi loading
                    const originalText = btn.innerHTML;
                    btn.innerHTML = 'Menghubungkan...';
                    btn.setAttribute('disabled', 'true');

                    const { error } = await supabase.auth.signInWithOAuth({
                        provider: 'google',
                        options: { redirectTo: window.location.origin }
                    });
                    
                    if (error) throw error;
                    
                } catch (err) {
                    console.error(err);
                    alert("Gagal koneksi ke Google.");
                    btn.innerHTML = 'Coba Lagi';
                    btn.removeAttribute('disabled');
                }
            });
        }
    </script>
</body>
</html>

<style>
    .login-body { display: flex; flex-direction: column; min-height: 100vh; }
    
    .login-container {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 40px 20px;
        background-color: #fafafa; 
    }

    .login-card {
        background: var(--bg);
        border: 1px solid var(--fg);
        padding: 60px 40px;
        text-align: center;
        max-width: 400px;
        width: 100%;
        /* Shadow kasar (Brutalist Style) */
        box-shadow: 8px 8px 0px rgba(0,0,0,0.1); 
    }

    .icon-header { 
        margin-bottom: 20px; 
        display: flex; 
        justify-content: center; /* Pastikan icon benar-benar di tengah */
        color: var(--fg);
    }

    .login-title {
        font-size: 1.8rem;
        font-weight: 900;
        margin-bottom: 10px;
        letter-spacing: -0.5px;
    }

    .login-desc { 
        color: #666; 
        font-size: 0.95rem; 
        margin-bottom: 30px; 
        line-height: 1.5; 
    }

    .btn-google {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 12px;
        padding: 14px;
        background: white;
        color: #111;
        border: 1px solid #ccc;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-google:hover {
        background: #f8f8f8;
        border-color: #111;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transform: translateY(-1px);
    }

    .btn-google:disabled {
        opacity: 0.7;
        cursor: not-allowed;
    }
</style>